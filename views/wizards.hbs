<h1>Wizard Information!</h1>
<p>you can view and add new wizards in this page!</p>

{{! Create a table }}
<table id="wizard-table">

  {{! Header section }}
  <thead>

    {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
    <tr>
      {{#each data.[0]}}
        <th>
          {{@key}}
        </th>
      {{/each}}
      <th>Delete</th>
    </tr>
  </thead>

  {{! Body section }}
  <tbody>

    {{! For each row, print the id, fname, lname, homeworld and age, in order }}
    {{#each data}}
      <tr>
        <td>{{this.wizard_id}}</td>
        <td>{{this.wizard_name}}</td>
        <td>{{this.wizard_graduated}}</td>        
        <td>{{this.house_name}}</td>
        <td><button onclick="deleteWizard({{this.wizard_id}})">Delete</button></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script src="./js/delete_wizard.js"></script>

