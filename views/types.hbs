{{!-- Create a table --}}
<table id="types-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.type_id}}</td>
            <td>{{this.type_name}}</td>
            <td>{{this.type_description}}</td>
            <td>
                <button onclick="deleteType({{this.type_id}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script src="/js/delete_type.js"></script>

{{! Form to add a record to the table  }}
<h2>Add a new spell type here</h2>
<p>To add a new type, please enter their information below and click 'Submit'!</p>
<form id="add-type-form-ajax">
  <label for="input-type-name">Type Name: </label>
  <input type="text" name="input-type-name" id="input-type-name" />

  <label for="input-type-desc">Type Description: </label>
  <input type="text" name="input-type-desc" id="input-type-desc" />

  <input type="submit" />
</form>

{{! Embed our javascript to handle the DOM manipulation and AJAX request }}
